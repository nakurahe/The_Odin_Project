<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container">
    <div>
        <h1 class="display-4 text-center"><%= typeof h1Contents == 'undefined' ? "" : h1Contents %></h1>
        <p class="lead text-center"> <%= typeof pContents == 'undefined' ? "" : pContents %></p>
    </div>
    <% if (loveItems) { %>
        <div class="row">
            <% loveItems.forEach(loveItem => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="<%= loveItem.image_path %>" class="card-img-top" alt="<%= loveItem.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/items/<%= loveItem.id %>"><%= loveItem.name %></a></h5>
                            <!-- Description and energy on the same row, energy at far right -->
                            <p class="card-text d-flex justify-content-between">
                                <span><%= loveItem.description %></span>
                                <span class="text-muted">ðŸ’ª<%= loveItem.energy_level %></span>
                            </p>
                            <div class="d-flex justify-content-center align-items-center">
                                <a href="/item/<%= loveItem.id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a href="/delete-confirm/<%= loveItem.id %>" class="btn btn-sm btn-outline-secondary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-warning" role="alert">
            No love items found!
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>