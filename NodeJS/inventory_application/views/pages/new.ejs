<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container">
    <div class="mt-3 text-center">
        <h2 class="card-text">
            Add a new item to the inventory
        </h2>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-8">
            <form action="/items" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Item Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="energy_level" class="form-label">Energy Level</label>
                    <input type="range" class="form-range" id="energy_level" name="energy_level" min="0" max="2" value="1" required>
                    <div class="d-flex justify-content-between">
                      <span>0</span>
                      <span>1</span>
                      <span>2</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="provider" class="form-label">Provider</label>
                    <select class="form-select" id="provider" name="provider" multiple required>
                      <option value="Gary Nya">Gary Nya</option>
                      <option value="Joann Nya">Joann Nya</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="genre_id" class="form-label">Genre</label>
                    <select class="form-select" id="genre_id" name="genre_id" required>
                        <option value="">Select a genre</option>
                        <% genres.forEach(genre => { %>
                            <option value="<%= genre %>"><%= genre.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="image_path" class="form-label">Image</label>
                    <input type="file" class="form-control" id="image_path" name="image_path" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Item</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>