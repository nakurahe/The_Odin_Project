<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container">
    <div>
        <h1 class="display-4">Welcome to Nyanya Love Item Admin Page!</h1>
        <p class="lead text-center">Here are <%= randomItemNumber %> highlighted items</p>
    </div>
    <% if (loveItems) { %>
        <div class="row">
            <% loveItems.forEach(loveItem => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="<%= loveItem.image_path %>" class="card-img-top" alt="<%= loveItem.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/items/<%= loveItem.id %>"><%= loveItem.name %></a></h5>
                            <p class="card-text"><%= loveItem.description %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/order/<%= loveItem.id %>" class="btn btn-sm btn-outline-secondary">Order</a>
                                </div>
                                <small class="text-muted">ðŸ’ª<%= loveItem.energy_level %></small>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-warning" role="alert">
            No love items found
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>