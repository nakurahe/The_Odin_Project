<%- include('../partials/header') %>

<div class="container">
    <div class="mt-3 text-center">
        <h2 class="card-text">
            <% if (loveItem.energy_level === 0) { %>
                Every Nyanya wants it! 🥰
            <% } else if (loveItem.energy_level === 1) { %>
                Takes a liiiittle bit energy! 🤔
            <% } else { %>
                OMG let Nya take a breath! 🥺
            <% } %>
        </h2>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <img src="<%= loveItem.image_path %>" class="card-img-top" alt="<%= loveItem.name %>">
                <div class="item-body">
                    <h5 class="card-title"><%= loveItem.name %></h5>
                    <p class="card-text d-flex justify-content-between">
                        <span><%= loveItem.description %></span>
                        <span class="text-muted">💪<%= loveItem.energy_level %></span>
                    </p>
                    <div class="d-flex justify-content-center align-items-center">
                        <a href="/item/<%= loveItem.id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a href="/delete-confirm/<%= loveItem.id %>" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </div>
                </div>
            </div>
        </div>
